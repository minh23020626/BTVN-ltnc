#include<bits/stdc++.h>
using namespace std;
#define MIN 1e9
#define MAX -1e9
#define ll long long
#define pb push_back
int main(){
    string a; cin >> a;
    int count = 1;
    for(int i =0 ;i<a.size();i++){
        if(a[i]>='A' && a[i]<='Z'){
            count++;
        }
    }
    cout << count;
}
